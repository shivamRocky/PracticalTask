<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_30"
        android:paddingEnd="@dimen/size_30"
        android:paddingBottom="@dimen/size_40"
        android:paddingTop="@dimen/margin_20"
        >

        <ImageView
            android:id="@+id/cancel_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_gravity="end"
            android:paddingBottom="@dimen/size_10"
            android:paddingStart="@dimen/size_10"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pop_up_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/size_5"
            android:lineSpacingExtra="5dp"
            />

        <com.chaos.view.PinView
            android:id="@+id/otp_pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemWidth="40dp"
            android:height="40dp"
            android:layout_marginTop="@dimen/size_25"
            android:layout_gravity="center"
            app:lineColor="@color/overlay_dark_60"
            style="@style/PinWidget.PinView"
            android:inputType="number"
            android:cursorVisible="true"
            app:cursorColor="@color/overlay_dark_60"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp"
            />
        

    </LinearLayout>

</androidx.cardview.widget.CardView>